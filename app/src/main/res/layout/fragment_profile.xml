<!-- Android Large - Login -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_lar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/android_lar"
    android:clipToOutline="true">

    <!-- Dark Background Full Screen -->
    <View
        android:id="@+id/dark_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dark_full_screen"
        />

    <!-- Black Background for Bottom Menu -->
    <View
        android:id="@+id/background_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/dark_background"
        android:background="@drawable/black_bottom_menu"
        android:backgroundTint="@null"
        />

    <!-- Back Icon -->
    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/back_button"
        android:elevation="7dp"
        android:rotation="-90" />

    <!-- Lernziel erstellen Header Label -->
    <TextView
        android:id="@+id/create_learning_goal_menu_header_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/profile"
        android:textAppearance="@style/top_menu_header"
        android:layout_toRightOf="@id/back_icon"
        android:layout_alignTop="@id/back_icon"/>

    <!-- Header Line -->
    <View
        android:id="@+id/header_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/back_icon"
        android:background="@drawable/header_line"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        tools:src="@tools:sample/avatars" />

    <!-- Profile Icon -->
    <ImageView
        android:id="@+id/profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="97dp"
        android:background="@drawable/user_icon"
        android:elevation="7dp"
        />

    <TextView
        android:id="@+id/username_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile"
        android:layout_below="@id/imageView"
        android:layout_marginTop="100dp"
        android:layout_marginStart="33dp"
        android:text="@string/username"
        android:textAppearance="@style/menu_button_text" />

    <TextView
        android:id="@+id/username_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile"
        android:layout_below="@id/username_profile"
        android:layout_marginStart="33dp"
        android:text="hier steht der Benutzername"
        android:textAppearance="@style/menu_button_text" />

    <!-- E-Mail Icon -->
    <ImageView
        android:id="@+id/email_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/profile"
        android:layout_marginTop="45dp"
        android:background="@drawable/email_icon"
        android:elevation="7dp"
        />

    <TextView
        android:id="@+id/email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile"
        android:layout_below="@id/username_display"
        android:layout_marginTop="55dp"
        android:layout_marginStart="33dp"
        android:text="@string/e_mail_address"
        android:textAppearance="@style/menu_button_text" />

    <TextView
        android:id="@+id/email_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile"
        android:layout_below="@id/email_title"
        android:layout_marginStart="33dp"
        android:text="hier steht der E-Mail_adresse"
        android:textAppearance="@style/menu_button_text" />

    <!-- E-Mail Icon -->
    <ImageView
        android:id="@+id/password_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/email_icon"
        android:layout_marginTop="45dp"
        android:background="@drawable/password_icon"
        android:elevation="7dp"
        />

    <TextView
        android:id="@+id/password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile"
        android:layout_below="@id/email_display"
        android:layout_marginTop="50dp"
        android:layout_marginStart="33dp"
        android:text="@string/e_mail_address"
        android:textAppearance="@style/menu_button_text" />

    <TextView
        android:id="@+id/password_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile"
        android:layout_below="@id/password_title"
        android:layout_marginStart="33dp"
        android:text="hier steht der E-Mail_adresse"
        android:textAppearance="@style/menu_button_text" />

    <!-- E-Mail Icon -->
    <ImageView
        android:id="@+id/learnstreak"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/password_icon"
        android:layout_marginTop="45dp"
        android:background="@drawable/email_icon"
        android:elevation="7dp"
        />

    <TextView
        android:id="@+id/learnstreak_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile"
        android:layout_below="@id/password_display"
        android:layout_marginTop="50dp"
        android:layout_marginStart="33dp"
        android:text="@string/e_mail_address"
        android:textAppearance="@style/menu_button_text" />

    <TextView
        android:id="@+id/learnstreak_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile"
        android:layout_below="@id/learnstreak_title"
        android:layout_marginStart="33dp"
        android:text="hier steht der E-Mail_adresse"
        android:textAppearance="@style/menu_button_text" />

    <!-- E-Mail Icon -->
    <ImageView
        android:id="@+id/achieved_goals"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/learnstreak"
        android:layout_marginTop="45dp"
        android:background="@drawable/email_icon"
        android:elevation="7dp"
        />

    <TextView
        android:id="@+id/achieved_goals_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile"
        android:layout_below="@id/learnstreak_display"
        android:layout_marginTop="50dp"
        android:layout_marginStart="33dp"
        android:text="@string/e_mail_address"
        android:textAppearance="@style/menu_button_text" />

    <TextView
        android:id="@+id/achieved_goals_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile"
        android:layout_below="@id/achieved_goals_title"
        android:layout_marginStart="33dp"
        android:text="hier steht der E-Mail_adresse"
        android:textAppearance="@style/menu_button_text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/background_bottom_menu"
        android:layout_alignBottom="@id/background_bottom_menu"
        android:drawableTop="@drawable/home_button"
        android:layout_marginLeft="4dp"
        app:iconPadding="-15dp"
        android:text="@string/home"
        android:textAppearance="@style/menu_button_text"
        android:textColor="@null"
        android:background="@android:color/transparent"
        />

    <!-- Learning Categories Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_learning_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/background_bottom_menu"
        android:layout_alignBottom="@id/background_bottom_menu"
        android:layout_centerHorizontal="true"
        android:drawableTop="@drawable/learning_category_button"
        app:iconPadding="-15dp"
        android:text="@string/learning_categories"
        android:textAppearance="@style/menu_button_text"
        android:textColor="@null"
        android:background="@android:color/transparent"
        />

    <!-- Learning Goals Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_learning_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/background_bottom_menu"
        android:layout_alignBottom="@id/background_bottom_menu"
        android:layout_alignRight="@id/background_bottom_menu"
        android:layout_marginRight="4dp"
        android:drawableTop="@drawable/learning_goal_button"
        app:iconPadding="-15dp"
        android:text="@string/learning_goals"
        android:textAppearance="@style/menu_button_text"
        android:textColor="@null"
        android:background="@android:color/transparent"
        />



</RelativeLayout>
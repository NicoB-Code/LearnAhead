<!-- Android Large - Login -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/android_lar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/android_lar"
    android:clipToOutline="true">

    <!-- Dark Background Full Screen -->

    <!-- Black Background for Bottom Menu -->
    <View
        android:id="@+id/dark_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dark_full_screen" />

    <View
        android:id="@+id/background_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignBottom="@id/dark_background"
        android:background="@drawable/black_bottom_menu"
        android:backgroundTint="@null"
        />

    <!-- Back Icon -->
    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/back_button"
        android:elevation="7dp"
        android:rotation="-90" />

    <!-- Profil Header Label -->
    <TextView
        android:id="@+id/create_learning_goal_menu_header_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textAppearance="@style/top_menu_header"
        android:layout_toEndOf="@id/back_icon"
        android:layout_above="@id/header_line"
        android:layout_marginBottom="5dp"/>

    <!-- Header Line -->
    <View
        android:id="@+id/header_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/back_icon"
        android:background="@drawable/header_line"
        />


    <!-- Profilbild -->
    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_below="@id/header_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/level_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/level_display"
        android:layout_below="@id/profilePic"
        app:backgroundTint="@null"
        android:textAppearance="@style/button_add_learning_category_or_goal"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_below="@id/level_display"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progress_bar"
        android:max="100"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/current_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_centerHorizontal="true"
        android:text="Dein Level"
        android:textAppearance="@style/menu_button_text" />

    <!-- Benutzer in Lila -->
    <ImageView
        android:id="@+id/profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/level_display"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/profile_icon"
        android:elevation="7dp" />

    <!-- Text f端r Benutzer -->
    <TextView
        android:id="@+id/username_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profile"
        android:layout_below="@id/level_display"
        android:layout_marginTop="48dp"
        android:layout_marginStart="33dp"
        android:text="@string/username"
        android:textAppearance="@style/menu_button_text"
        android:gravity="left"/>

    <!-- Text wo Username steht -->
    <TextView
        android:id="@+id/username_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profile"
        android:layout_below="@id/username_profile"
        android:layout_marginStart="33dp"
        android:text="@string/placeholder_username"
        android:textAppearance="@style/menu_button_text" />

    <!-- E-Mail Icon -->
    <ImageView
        android:id="@+id/email_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/profile"
        android:layout_marginTop="35dp"
        android:background="@drawable/email_profile_icon"
        android:elevation="7dp"
        />

    <!-- Text f端r E-Mail -->
    <TextView
        android:id="@+id/email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profile"
        android:layout_below="@id/username_display"
        android:layout_marginTop="40dp"
        android:layout_marginStart="33dp"
        android:text="@string/email_address"
        android:textAppearance="@style/menu_button_text" />

    <!-- Text wo E-Mail steht -->
    <TextView
        android:id="@+id/email_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profile"
        android:layout_below="@id/email_title"
        android:layout_marginStart="33dp"
        android:text="@string/placeholder_email"
        android:textAppearance="@style/menu_button_text" />


    <!-- Lernstreak Icon -->
    <ImageView
        android:id="@+id/learning_streak_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/email_icon"
        android:layout_marginTop="35dp"
        android:background="@drawable/learning_streak_icon"
        android:elevation="7dp"
        />

    <!-- Text f端r Lernstreak -->
    <TextView
        android:id="@+id/learning_streak_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profile"
        android:layout_below="@id/email_display"
        android:layout_marginTop="40dp"
        android:layout_marginStart="33dp"
        android:text="@string/biggest_learnstreak"
        android:textAppearance="@style/menu_button_text" />

    <!-- Text wo Lernstreak steht -->
    <TextView
        android:id="@+id/learning_streak_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profile"
        android:layout_below="@id/learning_streak_title"
        android:layout_marginStart="33dp"
        android:text="@string/placeholder_learning_streak"
        android:textAppearance="@style/menu_button_text" />

    <!-- Lernziele Icon -->
    <ImageView
        android:id="@+id/achieved_goals_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/learning_streak_icon"
        android:layout_marginTop="35dp"
        android:background="@drawable/goals_profile_icon"
        android:elevation="7dp"
        />

    <!-- Text f端r Lernziele -->
    <TextView
        android:id="@+id/achieved_goals_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profile"
        android:layout_below="@id/learning_streak_display"
        android:layout_marginTop="40dp"
        android:layout_marginStart="33dp"
        android:text="@string/learning_goals"
        android:textAppearance="@style/menu_button_text" />

    <!-- Text wo Lernziele stehen -->
    <TextView
        android:id="@+id/achieved_goals_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profile"
        android:layout_below="@id/achieved_goals_title"
        android:layout_marginStart="33dp"
        android:text="@string/placeholder_achieved_goals"
        android:textAppearance="@style/menu_button_text" />

    <!-- Home Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/background_bottom_menu"
        android:layout_alignBottom="@id/background_bottom_menu"
        android:drawableTop="@drawable/home_button"
        android:layout_marginStart="4dp"
        app:iconPadding="-15dp"
        android:text="@string/home"
        android:textAppearance="@style/menu_button_text"
        android:textColor="@null"
        android:background="@android:color/transparent"
        />

    <!-- Lernkategorien Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_learning_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/background_bottom_menu"
        android:layout_alignBottom="@id/background_bottom_menu"
        android:layout_centerHorizontal="true"
        android:drawableTop="@drawable/learning_category_button"
        app:iconPadding="-15dp"
        android:text="@string/learning_categories"
        android:textAppearance="@style/menu_button_text"
        android:textColor="@null"
        android:background="@android:color/transparent"
        />

    <!-- Lernziele Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_learning_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/background_bottom_menu"
        android:layout_alignBottom="@id/background_bottom_menu"
        android:layout_alignEnd="@id/background_bottom_menu"
        android:layout_marginEnd="4dp"
        android:drawableTop="@drawable/learning_goal_button"
        app:iconPadding="-15dp"
        android:text="@string/learning_goals"
        android:textAppearance="@style/menu_button_text"
        android:textColor="@null"
        android:background="@android:color/transparent"
        />

    <ProgressBar
        android:id="@+id/btn_progress_ar"
        style="?android:attr/progressBarStyle"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:elevation="10dp"
        android:indeterminateTint="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>
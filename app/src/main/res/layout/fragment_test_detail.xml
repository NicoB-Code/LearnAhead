<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_lar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/android_lar"
    android:clipToOutline="true">

    <!-- Dark Background Full Screen -->
    <View
        android:id="@+id/dark_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/dark_full_screen" />

    <!-- Black Background for Bottom Menu -->
    <View
        android:id="@+id/background_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignBottom="@id/dark_background"
        android:background="@drawable/black_bottom_menu"
        android:backgroundTint="@null"
        />

    <!-- Back Icon -->
    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/back_button"
        android:elevation="7dp"
        android:rotation="-90" />

    <!-- Profil Header Label -->
    <TextView
        android:id="@+id/learning_goal_menu_header_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/header_line"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="6dp"
        android:layout_toEndOf="@id/back_icon"
        android:text="Test erstellen"
        android:textAppearance="@style/twenty_two_sp_bold_white" />

    <!-- Header Line -->
    <View
        android:id="@+id/header_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/back_icon"
        android:background="@drawable/header_line"
        />

    <!-- Logout Icon -->
    <ImageView
        android:id="@+id/logout"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignEnd="@id/dark_background"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/logout"
        android:elevation="7dp"
        />

    <!-- Test Title to enter -->
    <EditText
        android:id="@+id/test_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:hint="Gib hier den Titel deines Tests ein:"
        android:textColorHint="@color/white"
        android:textAppearance="@style/fourteen_sp_regular_white"
        android:gravity="top"
        android:background="@drawable/no_underline"
        android:textColor="@color/white"
        />

    <ScrollView
        android:id="@+id/scroll_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/test_title"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/add_question_to_test_small_rectangle"
        android:layout_marginBottom="14dp">

    <LinearLayout
        android:id="@+id/add_question_box_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:gravity="center">

            <!-- Add Questions by Tags Label -->
            <TextView
                android:id="@+id/add_questions_by_tags_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:elevation="8dp"
                android:text="Fragen mithilfe von Tags hinzufügen"
                android:textAppearance="@style/fourteen_sp_bold_black"
                />

            <!-- Tag Container which contains every added tag -->
            <ScrollView
                android:id="@+id/tagsScrollView"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:elevation="8dp">

                <LinearLayout
                    android:id="@+id/tagsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </ScrollView>


            <!-- Control to add Tags which will get created inside the container -->
            <EditText
                android:id="@+id/add_tags"
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_height="wrap_content"
                android:hint="@string/add_tags"
                android:paddingStart="8dp"
                android:layout_marginTop="6dp"
                android:drawablePadding="8dp"
                android:elevation="8dp"
                android:background="@drawable/small_rectangle_for_create_question_and_tests"
                android:textAppearance="@style/fourteen_sp_regular_black"
                android:gravity="center_vertical"
                app:drawableLeftCompat="@drawable/add_circle_black"
                tools:ignore="RtlSymmetry" />

            <!-- Checkbox to manually add questions -->
            <CheckBox
                android:id="@+id/checkbox_manually_add_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fragen manuell hinzufügen"
                android:textAppearance="@style/fourteen_sp_regular_black"
                android:elevation="8dp"
                android:layout_gravity="left"
                android:layout_marginStart="16dp"
                />

            <!-- Dropdown Element -->
            <Spinner
                android:id="@+id/dropdown_element_manual_question"
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:background="@drawable/small_rectangle_for_create_question_and_tests"
                android:visibility="gone"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="8dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_add_manual_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/background_bottom_menu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"

                android:layout_marginBottom="19dp"
                android:visibility="gone"
                android:background="@drawable/add_question_rectangle"
                android:elevation="8dp"
                android:drawablePadding="8dp"
                android:text="Frage hinzufügen"
                android:drawableLeft="@drawable/add_circle_black"
                android:textAppearance="@style/fourteen_sp_bold_black"
                android:textColor="@null"
                app:backgroundTint="@null"
                tools:ignore="RtlSymmetry"
                />
        </LinearLayout>
    </ScrollView>


    <!-- Item Layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/scroll_view_container"
        android:layout_above="@id/button_save_test"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- Test speichern -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_save_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/background_bottom_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/add_question_rectangle"
        android:drawableLeft="@drawable/add_circle_black"
        app:iconPadding="-10dp"
        android:elevation="8dp"
        android:paddingStart="10dp"
        android:text="Test erstellen"
        android:textAppearance="@style/sixteen_sp_regular_black"
        android:textColor="@null"
        app:backgroundTint="@null"
        tools:ignore="RtlSymmetry"
        />

    <!-- Home Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/background_bottom_menu"
        android:layout_alignBottom="@id/background_bottom_menu"
        android:drawableTop="@drawable/home_button"
        android:layout_marginStart="4dp"
        app:iconPadding="-5dp"
        android:text="@string/home"
        android:textAppearance="@style/twelve_sp_bold_white"
        android:textColor="@null"
        android:background="@android:color/transparent"
        />

    <!-- Learning Categories Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_learning_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/background_bottom_menu"
        android:layout_alignBottom="@id/background_bottom_menu"
        android:layout_centerHorizontal="true"
        android:drawableTop="@drawable/learning_category_button"
        app:iconPadding="-5dp"
        android:text="@string/learning_categories"
        android:textAppearance="@style/twelve_sp_bold_white"
        android:textColor="@null"
        android:background="@android:color/transparent"
        />

    <!-- Learning Goals Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_learning_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/background_bottom_menu"
        android:layout_alignBottom="@id/background_bottom_menu"
        android:layout_alignEnd="@id/background_bottom_menu"
        android:layout_marginEnd="4dp"
        android:drawableTop="@drawable/learning_goal_button"
        app:iconPadding="-5dp"
        android:text="@string/learning_goals"
        android:textAppearance="@style/twelve_sp_bold_white"
        android:textColor="@null"
        android:background="@android:color/transparent"
        />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/black"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</RelativeLayout>
